            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:id="@+id/detaylarCardView"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:elevation="8dp"
                app:cardBackgroundColor="#F2F6F5"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/gezilecekImageView"
                        android:layout_width="match_parent"
                        android:scaleType="centerCrop"
                        android:layout_height="205dp">

                    </ImageView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#660D2291">

                    </View>

                    <TextView
                        android:id="@+id/gezilecekBaslikText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="#222D68"
                        android:fontFamily="@font/convergence"
                        android:textSize="25sp">

                    </TextView>

                    <TextView
                        android:id="@+id/gezilecekAciklamaText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="15dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/convergence"
                        android:maxLines="3"
                        android:textSize="15sp">

                    </TextView>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/detayliBilgi"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:layout_alignParentBottom="true"
                            android:text="DETAYLI BİLGİ"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="#5E9A23"
                            android:layout_gravity="bottom"
                            />
                    </RelativeLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


